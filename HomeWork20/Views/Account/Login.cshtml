@model HomeWork20.AuthModels.UserLogin

<!DOCTYPE html>
<html lang="en">

<head>
</head>

<body>
    <form class="persone-form" method="post" asp-controller="Account" asp-action="Login"
      asp-route-returnUrl="@Model.ReturnUrl" asp-antiforgery = "true">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <input type="hidden" asp-for="ReturnUrl" />
        <p>
            <input asp-for="UserName" placeholder="Username"/>
        </p>
        <p>
            <input asp-for="Password" placeholder="Password"/>
        </p>
        <button type="submit">Войти</button>
    </form>
</body>

</html>

