@using HomeWork20.AuthModels;
<!DOCTYPE html>
<html lang="en">

<head>
</head>

<body>
    <div class="table">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <table>
            <tr>
                <th width="350">Id</th>
                <th width ="150">UserName</th>
                <th width="10">Del</th>
            </tr>
            @foreach(User e in ViewBag.Users)
            {
            <tr>
                <td width="350">
                    @e.Id
                </td>
                <td width="150">
                    @e.UserName
                </td>
                <td width="10">
                    <a class="delete-user-link" asp-for="id" href="/api/ApiAccount/DeleteUser/@e.Id" data-method="delete">
                        <img src="/img/deleteImg.jpg" alt="Delete icon">
                    </a>  
                </td>
            </tr>
            }
        </table>
    </div>
</body>

</html>
